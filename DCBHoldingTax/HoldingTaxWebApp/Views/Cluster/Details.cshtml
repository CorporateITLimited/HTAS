@model HoldingTaxWebApp.Models.Users.Cluster
    @using HoldingTaxWebApp.Helpers
    @{
        ViewBag.Title = "Details";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @section Sheets{
        <link href="~/Content/FormDesign.css" rel="stylesheet" />
    }

    <div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">ক্লাস্টার</h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item text-muted">
                            <a href="" class="text-muted">ক্লাস্টারের বিশদ তথ্য</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
            </div>
        </div>
    </div>

    <div class="d-flex flex-column-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header">
                            <div class="row ml-10">
                                <h3 class="card-title">   <b class="kt-font-brand">@Model.ClusterName</b>  &nbsp; এর বিশদ তথ্য</h3>
                                <div class="card-toolbar">
                                    <div class="example-tools justify-content-center">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row ml-10">
                                <div class="col-lg-5">
                                    <div class="form-group form-group-xs row">
                                        <label class="col-4 col-form-label">
                                            @Html.DisplayNameFor(model => model.ClusterName)
                                        </label>
                                        <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                        <div class="col-6">
                                            <span class="form-control-plaintext kt-font-bolder">
                                                @Html.DisplayFor(model => model.ClusterName)
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-xs row">
                                        <label class="col-4 col-form-label ">
                                            @Html.DisplayNameFor(model => model.ClusterDetails)
                                        </label>
                                        <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                        <div class="col-6">
                                            <span class="form-control-plaintext kt-font-bolder">
                                                @Html.DisplayFor(model => model.ClusterDetails)
                                            </span>
                                        </div>
                                    </div>


                                    <div class="form-group form-group-xs row">
                                        <label class="col-4 col-form-label">
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </label>
                                        <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                        <div class="col-6">
                                            <span class="form-control-plaintext kt-font-bolder">
                                                @if (Model.IsActive == true)
                                                {
                                                    <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="kt-badge kt-badge--warning kt-badge--inline kt-badge--pill">Inactive</span>
                                                }
                                            </span>
                                        </div>
                                    </div>


                                </div>


                                <div class="col-lg-5">
                                    <div class="form-group form-group-xs row">
                                        <label class="col-4 col-form-label">
                                            @Html.DisplayNameFor(model => model.UserFullName)
                                        </label>
                                        <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                        <div class="col-6">
                                            <span class="form-control-plaintext kt-font-bolder">
                                                @Html.DisplayFor(model => model.UserFullName)
                                            </span>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="text-center">
                                <a href="~/Cluster/Edit/@Model.ClusterId" class="btn btn-outline-success btn-md">
                                    <i class="fas fa-pen"></i>হালনাগাদের পেজে  যান
                                </a>
                                <a href="~/Role/Index" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>মূল তালিকায় ফিরে যান</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




