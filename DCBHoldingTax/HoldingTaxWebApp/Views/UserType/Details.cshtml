@model HoldingTaxWebApp.Models.Users.UserType
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Notice-->
        <!--end::Notice-->
        <!--begin::Card-->
        <div class="card card-custom">

            <div class="kt-portlet">
                <!-- begin:: Content Head -->
                <div class="kt-subheader   kt-grid__item" id="kt_subheader">
                    <div class="kt-container ">
                        <div class="kt-subheader__main">

                            <h3 class="kt-subheader__title">Details of  : &nbsp;<b class="kt-font-brand">@Model.UserTypeName</b></h3>

                        </div>
                        <div class="kt-subheader__toolbar">
                            <div class="kt-subheader__wrapper">

                            </div>
                        </div>
                    </div>
                </div>

                <div class="kt-form kt-form--label-right">
                    <div class="kt-portlet__body">

                        <div class="row ml-10">
                            <div class="col-lg-5">
                                <div class="form-group form-group-xs row">
                                    <label class="col-4 col-form-label">
                                        @Html.DisplayNameFor(model => model.UserTypeName)
                                    </label>
                                    <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                    <div class="col-6">
                                        <span class="form-control-plaintext kt-font-bolder">
                                            @Html.DisplayFor(model => model.UserTypeName)
                                        </span>
                                    </div>
                                </div>

                              


                                <div class="form-group form-group-xs row">
                                    <label class="col-4 col-form-label">
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                    <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                    <div class="col-6">
                                        <span class="form-control-plaintext kt-font-bolder">
                                            @if (Model.IsActive == true)
                                            {
                                                <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                                            }
                                            else
                                            {
                                                <span class="kt-badge kt-badge--warning kt-badge--inline kt-badge--pill">Inactive</span>
                                            }
                                        </span>
                                    </div>
                                </div>


                            </div>



                        </div>

                    </div>

                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions offset-5">
                            <a href="~/UserType/Edit/@Model.UserTypeId" class="btn btn-outline-success btn-md"><i class="fas fa-check"></i>Save</a>
                            <a href="~/UserType/Index" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



