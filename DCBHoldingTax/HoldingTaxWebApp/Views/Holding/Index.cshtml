@model IEnumerable<HoldingTaxWebApp.Models.Holding.Holder>
@{
    ViewBag.Title = "Index";
}
@section Sheets{

    <link href="~/Theme/dist/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
    <style>
        .highlight {
            font-weight: bold;
            color: #4D7629;
            font-size: large;
        }

        .dull {
            font-weight: bold;
            color: #FF0000;
            background-color: red !important;
        }
    </style>
}


<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">গৃহকরদাতা</h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item text-muted">
                        <a href="#" class="text-muted">গৃহকরদাতাদের তালিকা মূল তালিকা</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">
        @if (TempData["SM"] != null)
        {
            <div class="alert alert-custom alert-white alert-shadow gutter-b fade show mb-5" role="alert">
                <div class="alert-text text-center font-weight-bolder" style="color: #24AEEF; font-size: 17px;"> @TempData["SM"]</div>
                <div class="alert-close">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="ki ki-close"></i></span>
                    </button>
                </div>
            </div>
        }

            <div class="card card-custom">
                <div class="card-header flex-wrap border-0 pt-6 pb-0">
                    <div class="card-title">
                        <h3 class="card-label">
                            গৃহকরদাতাদের তালিকা মূল তালিকা
                        </h3>
                    </div>
                    <div class="card-toolbar">
                        <!--begin::Button-->
                        <a href="~/Holding/Create" class="btn btn-primary font-weight-bolder">
                            <i class="fas fa-plus">
                            </i>নতুন গৃহকরদাতা যুক্ত করুন
                        </a>

                        <!--end::Button-->
                    </div>
                </div>
                <div class="card-body">
                    <!--begin: Datatable-->
                    <table class="table table-bordered table-hover table-checkable" id="kt_datatable" style="margin-top: 13px !important">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th>@Html.DisplayNameFor(model => model.HolderNo)</th>
                                <th>@Html.DisplayNameFor(model => model.AreaName)</th>
                                <th>@Html.DisplayNameFor(model => model.PlotNo)</th>
                                <th>@Html.DisplayNameFor(model => model.HolderNamecon)</th>
                                <th>@Html.DisplayNameFor(model => model.OwnerTypeName)</th>
                                @*<th>@Html.DisplayNameFor(model => model.BuildingTypeName)</th>*@
                                <th>@Html.DisplayNameFor(model => model.IsHolderAnOwner)</th>
                                <th>@Html.DisplayNameFor(model => model.FlatCount)</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                    <!--end: Datatable-->
                </div>
            </div>
    </div>
</div>







@section Scripts
{
    @*<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>*@
    <script src="~/Theme/dist/assets/plugins/custom/datatables/datatables.bundle.js"></script>

    <script>
        jQuery(document).ready(function () {


            function reDrawTable() {
                registerTable.page('first').draw();
            }

            var registerTable = $("#kt_datatable").DataTable({

                "oLanguage": {
                    "sEmptyTable": "No Information available"
                },
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": '@Url.Action("GetAllHolderForDatatable", "Holding")',
                "sServerMethod": 'post',
                "order": [[0, "desc"]],
                "aaSorting": [],
                "lengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]], //value:item pair

                "columnDefs": [
                    //{ "targets": [0, 1, 2, 3, 4, 5], "bSortable": true },
                    {
                        "targets": 6,
                        "data": "IsHolderAnOwner",
                        "render": function (data, type, full, meta) {
                            if (data == true)
                                return '<b style="color:#008D00">সুবিধা পাবেন  </b>';
                            else if (data == false)
                                return '<b style="color:#FF0000">সুবিধা পাবেন না  </b>';
                            else
                                return '<b style="color:#000000">No Data Found </b>';
                        }
                    },

                ],

                "columns": [
                    { 'data': null},
                    { 'data': 'HolderNo', class: 'text-left' },
                    { 'data': 'AreaName', class: 'text-center' },
                    { 'data': 'PlotNo', class: 'text-center' },
                    { 'data': 'HolderNamecon', class: 'text-left' },
                    { 'data': 'OwnerTypeName', class: 'text-center' },
                    //{ 'data': 'BuildingTypeName', class: 'text-left' },
                    { 'data': 'IsHolderAnOwner', class: 'text-left' },
                    { 'data': 'FlatCount', class: 'text-center' },
                    {
                        'data': null, //its null here because history column will contain the mRender


                        render: (data, type, row) => {
                            return `<a class="btn btn-sm btn-clean btn-icon btn-icon-md kt-datatable__cell" href='/Holding/Edit/${row.HolderId}' title="হালনাগাদ পেজে যান"><b> <i class="fa fa-edit"></i>  </b></a><a class="btn btn-sm btn-clean btn-icon btn-icon-md kt-datatable__cell" href='/Holding/Details/${row.HolderId}'  title="বিস্তারিত তথ্য পেজে যান"><b><i class="fa fa-th-list" aria-hidden="true"></i></b></a><a class="btn btn-sm btn-clean btn-icon btn-icon-md kt-datatable__cell" href='/Holding/rptHolderDetails/${row.HolderId}' title="হোল্ডার রিপোর্ট"><b><i class="fa fa-file-alt" aria-hidden="true"></i></b></a>`;
                        },

                    },
                ],
                "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                    $("td:first", nRow).html(iDisplayIndex + 1);
                    return nRow;
                },


            });

        });
    </script>


}