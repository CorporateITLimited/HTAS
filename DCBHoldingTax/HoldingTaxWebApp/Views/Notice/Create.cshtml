                        <div class="card-toolbar">
                            <div class="example-tools justify-content-center">
                                <div class="text-primary" style="font-size: 18px;">
                                    @ViewBag.DateTimeStr
                                </div>
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("Create", "Notice", null, FormMethod.Post, new { @class = "form-signin", @id = "kt_form_2", role = "form" }))
