@model IEnumerable<HoldingTaxWebApp.Models.Holding.Notice>
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Sheets{
    <link href="~/Content/FormDesign.css" rel="stylesheet" />
}



<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">গৃহকর সংক্রান্ত বিজ্ঞপ্তি </h5>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">

        @if (TempData["SM"] != null)
        {
            <div class="alert alert-custom alert-white alert-shadow gutter-b fade show mb-5" role="alert">
                <div class="alert-text font-weight-bolder" style="color: #0BB783;">@TempData["SM"]</div>
                <div class="alert-close">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="ki ki-close"></i></span>
                    </button>
                </div>
            </div>
        }
        <div class="card card-custom">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        গৃহকর সংক্রান্ত বিজ্ঞপ্তি এর তালিকা
                    </h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    <!--end::Dropdown-->
                    <!--begin::Button-->
                    @if ((Convert.ToInt32(Session[CommonConstantHelper.UserTypeId]) == 1))
                    {
                        <a href="~/Notice/Create" class="btn btn-primary font-weight-bolder">
                            <i class="fas fa-plus">
                            </i>নতুন বিজ্ঞপ্তি পাঠান
                        </a>
                    }

                    <!--end::Button-->
                </div>
            </div>
            <div class="card-body">
                <!--begin: Search Form-->
                <!--begin::Search Form-->
                <div class="mb-7">
                    <div class="row align-items-center">
                        <div class="col-lg-9 col-xl-8">
                            <div class="row align-items-center">
                                <div class="col-md-4 my-2 my-md-0">
                                    <div class="input-icon">
                                        <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query" />
                                        <span>
                                            <i class="flaticon2-search-1 text-muted"></i>
                                        </span>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
                <!--end::Search Form-->
                <!--end: Search Form-->
                <!--begin: Datatable-->
                @if ((Convert.ToInt32(Session[CommonConstantHelper.UserTypeId]) == 1))
                {
                    <table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FinancialYear)</th>
                                <th>@Html.DisplayNameFor(model => model.AreaName)</th>
                                <th>@Html.DisplayNameFor(model => model.HolderName)</th>
                                <th>@Html.DisplayNameFor(model => model.AreaPlotFlatData)</th>
                                <th>@Html.DisplayNameFor(model => model.NoticeName)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinancialYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AreaName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HolderName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AreaPlotFlatData)
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(item.NoticeName))
                                        {
                                            <a href="@Html.Raw(@Url.Action("NoticeReport", "Notice", new { @FYID = @item.FinancialYearId, @NTID = @item.NoticeTypeId, @HID = @item.HolderId }))">
                                                @Html.DisplayFor(modelItem => item.NoticeName)
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                }
                else
                {
                    <table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable">
                        <thead>
                            <tr>

                                <th>@Html.DisplayNameFor(model => model.FinancialYear)</th>
                                <th>@Html.DisplayNameFor(model => model.PlotNo)</th>
                                <th>@Html.DisplayNameFor(model => model.AreaPlotFlatData)</th>
                                <th>@Html.DisplayNameFor(model => model.NoticeName)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinancialYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlotNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AreaPlotFlatData)
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(item.NoticeName))
                                        {
                                            <a href="@Html.Raw(@Url.Action("NoticeReport", "Notice", new { @FYID = @item.FinancialYearId, @NTID = @item.NoticeTypeId, @HID = @item.HolderId }))">
                                                @Html.DisplayFor(modelItem => item.NoticeName)
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                }
                <!--end: Datatable-->
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        jQuery(document).ready(function () {
            $('#kt_datatable').KTDatatable({
                search: {
                    input: $('#kt_datatable_search_query'),
                    key: 'generalSearch',
                },
                layout: {
                    class: 'datatable-bordered',
                }
            });
        });
    </script>


}
