@{
    ViewBag.Title = "LoginHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Sheets{
    <link href="~/Content/formdesign.css" rel="stylesheet" />
}

<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">লগইন রিপোর্ট</h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item text-muted">
                        <a href="#" class="text-muted"></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>
<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card card-custom" id="kt_card_1">
                    @*<div class="card-header">
                        <h3 class="card-title">রিপোর্ট</h3>
                        <div class="card-toolbar">

                        </div>
                    </div>*@
                    <div class="card-body row">
                        <div class="col-md-5">
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label text-lg-right"> ব্যবহারকারীর নাম</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="userName" />

                                </div>

                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label text-lg-right"> ব্যবহারকারীর ধরণ</label>
                                <div class="col-lg-8">
                                    <select id="userType"  class="form-control">
                                        <option>নির্বাচন করুন</option>
                                        <option value="1">ডিসিবি ব্যবহারকারী</option>
                                        <option value="2">করদাতা</option>
                                    </select>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label text-lg-right"> শুরুর তারিখ</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="fromDate" />

                                </div>

                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label text-lg-right"> শেষের তারিখ</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="toDate" />

                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-lg-5"></div>
                            <div class="col-lg-7">
                                <button type="button" class="btn btn-outline-success btn-md" id="report_button"><i class="fas fa-check"></i>রিপোর্ট</button>
                                <button class="btn btn-outline-dark btn-md" id="reset_button">রিসেট</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body row">
                        <div class="col-md-12">
                            <div class="search-result">
                            </div>
                        </div>



                    </div>
                </div>
            </div>


        </div>
    </div>
</div>


@section Scripts {

    <script>
        //$('#AreaId').select2({
        //    placeholder: "--নির্বাচন করুন--",
        //    allowClear: true
        //});





         jQuery(document).ready(function () {
             
             $('#fromDate').datepicker({
                 rtl: KTUtil.isRTL(),
                 todayBtn: "linked",
                 clearBtn: true,
                 todayHighlight: true,
                 format: "dd/mm/yyyy",
                 autoclose: true
             });
             $('#toDate').datepicker({
                 rtl: KTUtil.isRTL(),
                 todayBtn: "linked",
                 clearBtn: true,
                 todayHighlight: true,
                 format: "dd/mm/yyyy",
                 autoclose: true
             });

            $("#report_button").click(function () {
                var userName = $("#userName").val();
                var userType = parseInt($("#userType").val()) || 0;
                var fromDate = $("#fromDate").val();
                var toDate = $("#toDate").val();
                //var AreaId = parseInt($("#userName").val()) || 0;
                debugger;

                $(".search-result").load("/Home/rptLoginHistory", { userName: userName, userType: userType, fromDate: fromDate, toDate: toDate });
               

            });










          $("#reset_button").click(function () {
                location.reload();
            });

        });





    </script>

}


