@model IEnumerable<HoldingTaxWebApp.Models.Constant.RentTaxRate>
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Index";
}

@section Sheets{
    <link href="~/Content/FormDesign.css" rel="stylesheet" />
}



<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">গৃহকরের হার</h5>
                @*<ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item text-muted">
                            <a href="" class="text-muted">Crud</a>
                        </li>
                    </ul>*@
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card card-custom">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        এলাকা ও ভবনের ধরণ অনুযায়ী গৃহকরের তালিকা
                    </h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    <!--end::Dropdown-->
                    <!--begin::Button-->
                    <a href="~/RentTaxTate/Create" class="btn btn-primary font-weight-bolder">
                        <i class="fas fa-plus">
                        </i>নতুন গৃহকরের হার
                    </a>

                    @*@if ((Convert.ToString(Session[CommonConstantHelper.RoleName]) == CommonConstantHelper.RoleAdmin) ||
                            (Convert.ToString(Session[CommonConstantHelper.RoleName]) == CommonConstantHelper.RoleManagement))
                        {
                            <a href="~/User/Create" class="btn btn-brand btn-elevate btn-icon-sm">
                                <i class="la la-plus"></i>
                                Add User
                            </a>
                        }*@

                    <!--end::Button-->
                </div>
            </div>
            <div class="card-body">
                <!--begin: Search Form-->
                <!--begin::Search Form-->
                <div class="mb-7">
                    <div class="row align-items-center">
                        <div class="col-lg-9 col-xl-8">
                            <div class="row align-items-center">
                                <div class="col-md-4 my-2 my-md-0">
                                    <div class="input-icon">
                                        <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query" />
                                        <span>
                                            <i class="flaticon2-search-1 text-muted"></i>
                                        </span>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
                <!--end::Search Form-->
                <!--end: Search Form-->
                <!--begin: Datatable-->
                <table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable">
                    <thead>
                        <tr>

                            <th>@Html.DisplayNameFor(model => model.AreaName)</th>
                            <th>@Html.DisplayNameFor(model => model.BuildingTypeName)</th>
                            <th>@Html.DisplayNameFor(model => model.PerSqfRent)</th>
                            <th>@Html.DisplayNameFor(model => model.Remarks)</th>

                            @*<th>@Html.DisplayNameFor(model => model.CreatedByName)</th>*@
                            <th>@Html.DisplayNameFor(model => model.LastUpdatedByName)</th>
                            <th>@Html.DisplayNameFor(model => model.LastUpdated)</th>

                            <th></th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AreaName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BuildingTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PerSqfRent)
                            </td>
                            <td>

                                @Html.DisplayFor(modelItem => item.Remarks)

                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.CreatedByName)
                            </td>*@

                            <td>
                                @Html.DisplayFor(modelItem => item.LastUpdatedByName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.LastUpdated)
                            </td>


                            <td>
                                <a class="btn btn-sm btn-clean btn-icon btn-icon-md kt-datatable__cell" href="~/RentTaxTate/Edit/@item.RentTaxRateId" title="Edit">
                                    <b> <i class="fa fa-edit"></i>  </b>
                                </a>
                                <a class="btn btn-sm btn-clean btn-icon btn-icon-md kt-datatable__cell" href="~/RentTaxTate/Details/@item.RentTaxRateId" title="Details View">
                                    <b><i class="fa fa-th-list" aria-hidden="true"></i></b>
                                </a>
                            </td>


                        </tr>
                        }
                    </tbody>

                </table>
                <!--end: Datatable-->
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        jQuery(document).ready(function () {
            $('#kt_datatable').KTDatatable({
                search: {
                    input: $('#kt_datatable_search_query'),
                    key: 'generalSearch',
                },
                layout: {
                    class: 'datatable-bordered',
                }
            });
        });
    </script>


}

