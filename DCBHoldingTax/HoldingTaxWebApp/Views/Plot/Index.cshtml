@model IEnumerable<HoldingTaxWebApp.Models.Plots.Plot>
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Sheets{

    <link href="~/Content/FormDesign.css" rel="stylesheet" />
}

<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">প্লট </h5>
            </div>
        </div>
        <div class="d-flex align-items-center flex-wrap">
            @if (TempData["SM"] != null)
            {
                <div class="alert alert-custom alert-success fade show mb-5" role="alert">
                    <div class="alert-text">@TempData["SM"]</div>
                    <div class="alert-close">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true"><i class="ki ki-close"></i></span>
                        </button>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card card-custom">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        প্লটের তালিকা
                    </h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    <!--end::Dropdown-->
                    <!--begin::Button-->
                    <a href="~/Plot/Create" class="btn btn-primary font-weight-bolder">
                        <i class="fas fa-plus"></i> নতুন প্লট
                    </a>
                    <!--end::Button-->
                </div>
            </div>
            <div class="card-body">
                <!--begin: Search Form-->
                <!--begin::Search Form-->
                <div class="mb-7">
                    <div class="row align-items-center">
                        <div class="col-lg-9 col-xl-8">
                            <div class="row align-items-center">
                                <div class="col-md-4 my-2 my-md-0">
                                    <div class="input-icon">
                                        <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query" />
                                        <span>
                                            <i class="flaticon2-search-1 text-muted"></i>
                                        </span>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
                <!--end::Search Form-->
                <!--end: Search Form-->
                <!--begin: Datatable-->
                <table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.AreaName)</th>
                            <th>@Html.DisplayNameFor(model => model.PlotNo)</th>
                            <th>@Html.DisplayNameFor(model => model.RoadNo)</th>
                            <th>@Html.DisplayNameFor(model => model.RoadName)</th>
                            <th>@Html.DisplayNameFor(model => model.StrLastUpdated)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AreaName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlotNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoadNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoadName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StrLastUpdated)
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-clean btn-icon btn-icon-md kt-datatable__cell" href="~/Plot/Edit/@item.PlotId" title="হালনাগাদ পেজে যান">
                                        <b><i class="fa fa-edit"></i></b>
                                    </a>
                                    <a class="btn btn-sm btn-clean btn-icon btn-icon-md kt-datatable__cell" href="~/Plot/Details/@item.PlotId" title="বিস্তারিত তথ্য পেজে যান">
                                        <b><i class="fa fa-th-list" aria-hidden="true"></i></b>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
    </div>
</div>
<!--end::Card-->


@section Scripts
{
    <script>
        jQuery(document).ready(function () {
            $('#kt_datatable').KTDatatable({
                search: {
                    input: $('#kt_datatable_search_query'),
                    key: 'generalSearch',
                },
                layout: {
                    class: 'datatable-bordered',
                }
            });
        });
    </script>
}





