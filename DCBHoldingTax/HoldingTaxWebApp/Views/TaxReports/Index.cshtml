            $("#ReportType").val(rptId);
            $('#ReportType').trigger('change');

            $("#report_button").click(function () {
                var FinancialYearId = parseInt($("#FinancialYearId").val()) || 0;
                var AreaId = parseInt($("#AreaId").val()) || 0;

                var reportType = parseInt($("#ReportType").val()) || 0;

                if (reportType === 1) {
                    $(".search-result").load("/TaxReports/rptRecoverabletax", { FinancialYearId: FinancialYearId, AreaId: AreaId });
                }
                else if (reportType === 2) {
                    $(".search-result").load("/TaxReports/rptPaidTax", { FinancialYearId: FinancialYearId, AreaId: AreaId });
                }
                else if (reportType === 3) {
                    $(".search-result").load("/TaxReports/rptUnPaidTax", { FinancialYearId: FinancialYearId, AreaId: AreaId });
                }
                else if (reportType === 4) {
                    $(".search-result").load("/TaxReports/rptTaxPlayers", { FinancialYearId: FinancialYearId, AreaId: AreaId });
                }

                else if (reportType === 5) {
                    $(".search-result").load("/TaxReports/rptNonTaxPlayers", { FinancialYearId: FinancialYearId, AreaId: AreaId });
                }

                else {
                    Swal.fire('Error!', 'রিপোটের ধরণ নির্বাচন করুন |', 'error')
                }

            });

            $("#reset_button").click(function () {
                location.reload();
            });

        });


    </script>

}