            placeholder: "--নির্বাচন করুন--",
            allowClear: true
        });
        $('#PlotId').select2({
            placeholder: "--নির্বাচন করুন--",
            allowClear: true
        });

         $('#ReportType').select2({
            placeholder: "--নির্বাচন করুন--",
            allowClear: true
        });

        var rptId= @ViewBag.ReportId;

