@model HoldingTaxWebApp.Models.Users.Role
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="card card-custom gutter-b example example-compact">
            <div class="card-header">
                <h3 class="card-title">Details of  : &nbsp;<b class="kt-font-brand">@Model.RoleName</b></h3>
                <div class="card-toolbar">
                    <div class="example-tools justify-content-center">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row ml-10">
                    <div class="col-lg-5">
                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.RoleName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.RoleName)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label ">
                                @Html.DisplayNameFor(model => model.RoleDetails)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.RoleDetails)
                                </span>
                            </div>
                        </div>


                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @if (Model.IsActive == true)
                                    {
                                        <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                                    }
                                    else
                                    {
                                        <span class="kt-badge kt-badge--warning kt-badge--inline kt-badge--pill">Inactive</span>
                                    }
                                </span>
                            </div>
                        </div>


                    </div>


                    <div class="col-lg-5">
                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.UpdatedByUserName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.UpdatedByUserName)
                                </span>
                            </div>
                        </div>


                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.LastUpdated)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.LastUpdated)
                                </span>
                            </div>
                        </div>



                    </div>
                </div>

            </div>
            <div class="card-footer">
                <div class="text-center">
                    <a href="~/Role/Edit/@Model.RoleId" class="btn btn-outline-success btn-md"><i class="fas fa-pen"></i>Update</a>
                    <a href="~/Role/Index" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>




