@model HoldingTaxWebApp.Models.Users.Role
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Sheets{
    <link href="~/Content/FormDesign.css" rel="stylesheet" />
}

    <div class="row">
        <div class="col-md-12">
            <div class="card card-custom gutter-b example example-compact">
                <div class="card-header">
                    <h3 class="card-title">  Update Role</h3>
                    <div class="card-toolbar">
                        <div class="example-tools justify-content-center">
                        </div>
                    </div>
                </div>
                @using (Html.BeginForm("Edit", "Role", null, FormMethod.Post, new { @class = "form-signin", @id = "kt_form_3", role = "form" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.RoleId)

                <div class="card-body">
                    <fieldset>

                        <legend>Role Information</legend>

                        <div class="row m-2">
                            <div class="col-sm-4 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control", @name = "RoleName", placeholder = "Role Name", @id = "RoleName" } })
                                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-4 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RoleDetails, htmlAttributes: new { @class = "" })
                                    @Html.TextAreaFor(model => model.RoleDetails, new { @class = "form-control", @name = "RoleDetails", @id = "RoleDetails" })
                                    @Html.ValidationMessageFor(model => model.RoleDetails, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-4 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "" })
                                    @if (Model.IsActive == true)
                                    {
                                        <select class="form-control" name="IsActive" id="IsActive">
                                            <option value="true">Active</option>
                                            <option value="false">Inactive</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select class="form-control" name="IsActive" id="IsActive">
                                            <option value="false">Inactive</option>
                                            <option value="true">Active</option>
                                        </select>
                                    }

                                </div>
                            </div>
                        </div>
                        <br />
                    </fieldset>
                </div>
                    <div class="card-footer">
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-success btn-md"><i class="fas fa-pencil-alt"></i>Update</button>
                            <button type="button" onclick="window.location.href = '/Role/Index'" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>Back to List</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>





@section Scripts {

    <script>

        autosize($('#RoleDetails'));

        jQuery(document).ready(function () {
            $("#kt_form_3").validate({
                rules: {
                    RoleName: {
                        required: true
                    },
                    RoleDetails: {
                        required: true
                    }

                },

                invalidHandler: function (event, validator) {
                    KTUtil.scrollTop();
                }
            });
        });
    </script>
}
