@model HoldingTaxWebApp.Models.Users.clsUser
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Sheets{
    <link href="~/Content/FormDesign.css" rel="stylesheet" />
}


<div class="row">
    <div class="col-md-12">
        <div class="card card-custom gutter-b example example-compact">
            <div class="card-header">
                <h3 class="card-title">Details of  : &nbsp;<b class="kt-font-brand">@Model.UserFullName</h3>
                <div class="card-toolbar">
                    <div class="example-tools justify-content-center">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row offset-1">
                    <div class="col-lg-5">
                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.UserFullName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.UserFullName)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label ">
                                @Html.DisplayNameFor(model => model.UserDetails)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.UserDetails)
                                </span>
                            </div>
                        </div>


                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.EmployeeName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.EmployeeName)
                                </span>
                            </div>
                        </div>


                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.RoleName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.RoleName)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.Email)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.Email)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.MobileNumber)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.MobileNumber)
                                </span>
                            </div>
                        </div>

                    </div>


                    <div class="col-lg-5">
                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.CreatedByUserName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.CreatedByUserName)
                                </span>
                            </div>
                        </div>


                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.CreateDate)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.CreateDate)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.UpdatedByUserName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.UpdatedByUserName)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label ">
                                @Html.DisplayNameFor(model => model.LastUpdated)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.LastUpdated)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.UserName)
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @Html.DisplayFor(model => model.UserName)
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-xs row">
                            <label class="col-4 col-form-label">
                                @Html.DisplayNameFor(model => model.LogIsActive) :
                            </label>
                            <span class="col-1 col-form-label kt-font-bolder"> : </span>
                            <div class="col-6">
                                <span class="form-control-plaintext kt-font-bolder">
                                    @if (Model.IsActive == true)
                                    {
                                        <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                                    }
                                    else
                                    {
                                        <span class="kt-badge kt-badge--warning kt-badge--inline kt-badge--pill">Inactive</span>
                                    }
                                </span>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="text-center">
                    <a href="~/User/Edit/@Model.UserId" class="btn btn-outline-success btn-md">
                        <i class="fas fa-pen"></i>Update
                    </a>
                    <a href="~/User/Index" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>



