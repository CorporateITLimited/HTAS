                                        <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                        <div class="col-6">
                                            <span class="form-control-plaintext kt-font-bolder">
                                                @Html.DisplayFor(model => model.LastUpdated)
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-xs row">
                                        <label class="col-4 col-form-label">
                                            @Html.DisplayNameFor(model => model.UserName)
                                        </label>
                                        <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                        <div class="col-6">
                                            <span class="form-control-plaintext kt-font-bolder">
                                                @Html.DisplayFor(model => model.UserName)
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-xs row">
                                        <label class="col-4 col-form-label">
                                            @Html.DisplayNameFor(model => model.LogIsActive) :
                                        </label>
                                        <span class="col-1 col-form-label kt-font-bolder"> : </span>
                                        <div class="col-6">
                                            <span class="form-control-plaintext kt-font-bolder">
                                                @if (Model.IsActive == true)
                                                {
                                                    <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="kt-badge kt-badge--warning kt-badge--inline kt-badge--pill">Inactive</span>
                                                }
                                            </span>
                                        </div>
                                    </div>



                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-center">
                                <a href="~/User/Edit/@Model.UserId" class="btn btn-outline-success btn-md">
                                    <i class="fas fa-pen"></i>Update
                                </a>
                                <a href="~/User/Index" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
