@model HoldingTaxWebApp.ViewModels.QueryCommon

@{
    ViewBag.Title = "Regenerate Tax";
}
@section Sheets{
    <link href="~/Content/formdesign.css" rel="stylesheet" />
}

<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">নির্দিষ্ট সংখ্যক গৃহকরদাতাদের জন্য পুনরায় গৃহকর হালনাগাদকরণ</h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item text-muted">
                        <a href="#" class="text-muted">গৃহকর হালনাগাদকরণ</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="card card-custom" id="kt_card_1">
                    <div class="card-header">
                        <h3 class="card-title">পুনরায় গৃহকর হালনাগাদ করুন</h3>
                        <span style="color: forestgreen; font-size: 18px;">প্লটভিত্তিক গৃহকরের তথ্য হালনাগাদ করুন</span>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.FinancialYearId, "আর্থিক বছর", htmlAttributes: new { @class = "col-lg-3 col-form-label text-lg-right" })
                            <div class="col-lg-9">
                                @Html.DropDownListFor(model => model.FinancialYearId, null, "-- নির্বাচন করুন --", new
                           {
                               @class = "form-control",
                               @name = "FinancialYearId",
                               @id = "FinancialYearId"
                           })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.AreaId, "এলাকার নাম", htmlAttributes: new { @class = "col-lg-3 col-form-label text-lg-right" })
                            <div class="col-lg-9">
                                @Html.DropDownListFor(model => model.AreaId, null, "-- নির্বাচন করুন --", new
                           {
                               @class = "form-control",
                               @name = "AreaId",
                               @id = "AreaId"
                           })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PlotId, "প্লট নম্বর", htmlAttributes: new { @class = "col-lg-3 col-form-label text-lg-right" })
                            <div class="col-lg-9">
                                @Html.DropDownListFor(model => model.PlotId, null, "-- নির্বাচন করুন --", new
                           {
                               @class = "form-control",
                               @name = "PlotId",
                               @id = "PlotId"
                           })
                            </div>

                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="text-center">
                            <button type="button" id="btnSearch" class="btn btn-outline-primary btn-sm"><i class="fas fa-search"></i>গৃহকরদাতাদের তালিকা দেখুন</button>
                            <button class="btn btn-outline-dark btn-sm" id="reset_button"><i class="fas fa-trash-restore"></i>রিসেট করুন </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="card card-custom" id="kt_card_1">
                    <div class="card-header">
                        <h3 class="card-title">গৃহকরদাতাদের তালিকা</h3>
                        <span style="color: forestgreen; font-size: 18px;">যেসব গৃহকরদাতাদের গৃহকরের তথ্য হালনাগাদ করবেন তাদেরকে টিক দিন </span>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover table-sm" width="100" id="holder_details">
                            <thead class="thead-light text-center">
                                <tr>
                                    <th>গৃহকরদাতার নাম</th>
                                    <th>গৃহকরদাতার আইডি নম্বর</th>
                                    <th>নেট কর প্রদেয় পরিমাণ</th>
                                    <th>টিক দিন</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <div class="text-center">
                            <button type="submit" id="btnSubmit" class="btn btn-outline-success btn-sm"><i class="fas fa-edit"></i>গৃহকর হালনাগাদ করুন</button>
                            <button type="button" onclick="window.location.href = '/HoldingTax/Index'" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left"></i>মূল তালিকায় ফিরে যান</button>
                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        jQuery(document).ready(function () {
            $('#FinancialYearId').select2({
                placeholder: "--নির্বাচন করুন--",
                allowClear: true
            });
            $('#AreaId').select2({
                placeholder: "--নির্বাচন করুন--",
                allowClear: true
            });
            $('#PlotId').select2({
                placeholder: "--নির্বাচন করুন--",
                allowClear: true
            });

            $("#AreaId").change(function () {
                var areaId = $("#AreaId").val();
                var json = {
                    AreaId: areaId
                };
                $.ajax({
                    url: '@Url.Action("GetAllPlotByAreaId", "HoldingTax")',
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        if (data.length === 0) {
                            Swal.fire(
                                'পাওয়া যায়নি!', 'নির্বাচিত এলাকার জন্য কোনো প্লট পাওয়া যায়নি', 'info'
                            )
                        }
                        else {
                            $("#PlotId").empty();
                            $("#PlotId").append("<option value=''>--নির্বাচন করুন--</option>");
                            $.each(data, function (index, row) {
                                $("#PlotId").append("<option value='" + row.PlotId + "'>" + row.PlotNo + "</option>");
                            });
                        }
                    },
                    error: function () {
                        Swal.fire(
                            'পাওয়া যায়নি!', 'নির্বাচিত এলাকার জন্য কোনো প্লট পাওয়া যায়নি', 'error'
                        )
                    }
                });
            });

            $("#btnSearch").click(function (e) {
                e.preventDefault();
                var holder_details_table = $('#holder_details tbody');

                var financialYearId = parseInt($("#FinancialYearId").val()) || 0;
                var areaId = parseInt($("#AreaId").val()) || 0;
                var plotId = parseInt($("#PlotId").val()) || 0;

                var json = {
                    FinancialYearId: financialYearId,
                    AreaId: areaId,
                    PlotId: plotId
                };

                holder_details_table.empty();

                $.ajax({
                    url: '@Url.Action("GetHolderForRegenerateTAX", "HoldingTax")',
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        if (data.length === 0) {
                            Swal.fire(
                                'তথ্য পাওয়া যায়নি!', 'কোনো গৃহকরদাতা পাওয়া যায়নি', 'info'
                            )
                        }
                        else {
                            $(data).each(function (index, upd) {
                                holder_details_table.append('<tr>' +
                                    '<input type="hidden" value=' + upd.HoldingTaxId + ' class="HoldingTaxId" id="HoldingTaxId" />' +
                                    '<td class="text-center">' + upd.HolderName + '</td>' +
                                    '<td class="text-center">' + upd.HolderNo + '</td>' +
                                    '<td class="text-center">' + upd.NetTaxPayableAmount + '</td>' +
                                    '<td class="text-center"> <input type="checkbox" class="holding_tax_id_status" value="false" /> </td>' +
                                    '</tr>');
                            });
                        }
                    },
                    error: function (error) {
                        Swal.fire(
                            'কোনো গৃহকরদাতা পাওয়া যায়নি', ' ' + error.Message, 'error'
                        )
                    }
                });
            });

            $("#holder_details tbody").on('change', '.holding_tax_id_status', function () {
                var currentRow = $(this).closest("tr");
                if (currentRow.find('.holding_tax_id_status').is(":checked")) {
                    currentRow.find('.holding_tax_id_status').val("true");
                    currentRow.find('.holding_tax_id_status').prop('checked', true);
                } else {
                    currentRow.find('.holding_tax_id_status').val("false");
                    currentRow.find('.holding_tax_id_status').prop('checked', false);
                }
            });

            $("#reset_button").click(function (e) {
                e.preventDefault();
                window.location.href = '/HoldingTax/RegenerateTax';
            });


            $("#btnSubmit").click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'আপনি কি টিক দেয়া গৃহকরদাতাদের গৃহকরের তথ্য হালনাগাদ করতে চান?',
                    text: 'যদি হালনাগাদ করেন তাহলে পূর্ববর্তী তথ্য সব মুছে যাবে এবং নতুন তথ্য হালনাগাদ হবে ',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'সাবমিট করুন',
                    cancelButtonText: 'বাতিল করুন'
                }).then((result) => {
                    if (result.value) {

                        var list = [];
                        $('#holder_details tbody tr').each(function (index, ele) {
                            var financialYearId = parseInt($('#FinancialYearId option:selected').val()) || 0;
                            var holdingTaxId = parseInt($('.HoldingTaxId', this).val()) || 0;
                            var holdingTaxIdStatus = $('.holding_tax_id_status', this).val();
                            var status_list = {
                                FinancialYearId: financialYearId,
                                HoldingTaxId: holdingTaxId,
                                HoldingTaxIdStatus: holdingTaxIdStatus
                            }
                            list.push(status_list);
                        });

                        var data = {
                            Items: list
                        }

                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("RegenerateTaxUpdate", "HoldingTax")',
                            data: JSON.stringify(data),
                            contentType: 'application/json',
                            success: function (d) {
                                if (d.status === "success") {
                                    list = [];
                                    $('#holder_details tbody').empty();
                                    Swal.fire({
                                        title: "সফলভাবে টিক দেয়া গৃহকরদাতাদের গৃহকরের তথ্য হালনাগাদ করা হয়েছে",
                                        icon: "success",
                                        buttonsStyling: false,
                                        confirmButtonText: "সফলভাবে হালনাগাদ করা হয়েছে",
                                        customClass: {
                                            confirmButton: "btn font-weight-bold btn-success",
                                        }
                                    });

                                    setTimeout(function () { window.location.href = "/HoldingTax/RegenerateTax"; }, 2500);
                                }
                                else if (d.status !== "success") {
                                    Swal.fire({
                                        text: d.status,
                                        icon: "error",
                                        buttonsStyling: false,
                                        confirmButtonText: "বাতিল করা হয়েছে",
                                        customClass: {
                                            confirmButton: "btn font-weight-bold btn-danger",
                                        }
                                    });
                                }
                                else {
                                    Swal.fire({
                                        text: "অজানা ত্রুটি",
                                        icon: "error",
                                        buttonsStyling: false,
                                        confirmButtonText: "বাতিল করা হয়েছে",
                                        customClass: {
                                            confirmButton: "btn font-weight-bold btn-danger",
                                        }
                                    });
                                }
                            },
                            error: function (error) {
                                console.log(error);
                            }
                        });
                    }
                });
            });
        });

    </script>
}