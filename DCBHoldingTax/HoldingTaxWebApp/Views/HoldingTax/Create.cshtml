@model HoldingTaxWebApp.ViewModels.QueryCommon

@{
    ViewBag.Title = "Create";
}
@section Sheets{
    <link href="~/Content/formdesign.css" rel="stylesheet" />
}

<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">গৃহকর</h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item text-muted">
                        <a href="#" class="text-muted">নতুন বছরের গৃহকর তৈরী</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-custom" id="kt_card_1">
                    <div class="card-header">
                        <h3 class="card-title">নতুন বছরের গৃহকর তৈরী করুন  </h3>
                        <div class="card-toolbar">
                            <div class="example-tools justify-content-center">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.FinancialYearId, "আর্থিক বছর", htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                            <div class="col-lg-8">
                                @Html.DropDownListFor(model => model.FinancialYearId, null, "-- নির্বাচন করুন --", new
                           {
                               @class = "form-control",
                               @name = "FinancialYearId",
                               @id = "FinancialYearId"
                           })
                                @Html.ValidationMessageFor(model => model.FinancialYearId, "", new { @class = "text-danger" })
                            </div>

                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="text-center">
                            <button type="submit" id="btnSubmit" class="btn btn-outline-success btn-md"><i class="fas fa-check"></i>গৃহকর তৈরী করুন</button>
                            <button type="button" onclick="window.location.href = '/HoldingTax/Index'" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>মূল তালিকায় ফিরে যান</button>
                        </div>
                        <div>
                            <span id="details_error"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card card-custom" id="kt_card_1">
                    <div class="card-header">
                        <h3 class="card-title">গৃহকর মূল্যায়ন চূড়ান্তকরণ</h3>
                        <div class="card-toolbar">
                            <div class="example-tools justify-content-center">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.FinancialYearId_Two, "আর্থিক বছর", htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                            <div class="col-lg-8">
                                @Html.DropDownListFor(model => model.FinancialYearId_Two, null, "-- নির্বাচন করুন --", new
                           {
                               @class = "form-control",
                               @name = "FinancialYearId_Two",
                               @id = "FinancialYearId_Two"
                           })
                                @Html.ValidationMessageFor(model => model.FinancialYearId_Two, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-center">
                            <button type="button" id="btnFinalize" class="btn btn-outline-success btn-md"><i class="fas fa-check"></i>গৃহকর চূড়ান্ত করুন </button>
                            <button type="button" onclick="window.location.href = '/HoldingTax/Index'" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>মূল তালিকায় ফিরে যান</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

