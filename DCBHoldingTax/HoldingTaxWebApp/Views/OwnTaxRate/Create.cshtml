@model HoldingTaxWebApp.Models.Constant.OwnTaxRate
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Sheets{
    <link href="~/Content/FormDesign.css" rel="stylesheet" />
}

<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">মালিকানা ধরণের  করের হার</h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item text-muted">
                        <a href="#" class="text-muted">মালিকানা ধরণের করের যুক্ত করুন</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>


<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-custom gutter-b example example-compact">
                    <div class="card-header">
                        <h3 class="card-title">মালিকানা ধরণের করের যুক্ত করুন</h3>
                        <div class="card-toolbar">
                            <div class="example-tools justify-content-center">
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("Create", "OwnTaxRate", null, FormMethod.Post, new { @class = "form-signin", @id = "kt_form_2", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            <fieldset>

                                <legend>সাধারণ তথ্য</legend>

                                <div class="form-group row m-2">
                                    @Html.LabelFor(model => model.Mill_Civil, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.DropDownListFor(model => model.Mill_Civil, null, "-- নির্বাচন করুন --", new
                                   {
                                       @class = "form-control"
                                   })
                                    </div>

                                    @Html.LabelFor(model => model.AreaSF, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.EditorFor(model => model.AreaSF, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter area square foot" } })
                                    </div>
                                </div>
                                <br />
                                <div class="form-group row m-2">
                                    @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter amount" } })
                                    </div>

                                    @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter remarks" } })
                                    </div>
                                </div>

                                <div class="form-group row m-2">

                                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.DropDownListFor(model => model.IsActive, null, new
                                   {
                                       @class = "form-control",
                                       @disabled = "disabled"
                                   })
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="card-footer">
                            <div class="text-center">
                                <button type="submit" class="btn btn-outline-success btn-md"><i class="fas fa-check"></i>সাবমিট করুন</button>
                                <button type="button" onclick="window.location.href = '/OwnTaxRate/Index'" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>মূল তালিকায় ফিরে যান</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {

    <script>


        jQuery(document).ready(function () {
            $('#Mill_Civil').select2({
                placeholder: "-- নির্বাচন করুন  --",
                allowClear: true
            });

            $("#kt_form_2").validate({
                rules: {
                    Mill_Civil: {
                        required: true
                    },
                    AreaSF: {
                        required: true,
                        number: true
                    },
                    Amount: {
                        required: true,
                        number: true
                    }
                },
                messages: {
                    Mill_Civil: "ঘরটি অবশ্যই পূরণ করতে হবে",
                    AreaSF: {
                        required: "ঘরটি অবশ্যই পূরণ করতে হবে",
                        number: "ফ্লোরের আয়তন (বর্গফুট) ইংরেজিতে দিন"
                    },
                    Amount: {
                        required: "ঘরটি অবশ্যই পূরণ করতে হবে",
                        number: "প্রতিমাসের ভাড়া ইংরেজিতে দিন"
                    }
                },
                invalidHandler: function (event, validator) {
                    KTUtil.scrollTop();
                }
            });
        });
    </script>
}


