@model HoldingTaxWebApp.Models.DBO.DOHSArea
@using HoldingTaxWebApp.Helpers
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Sheets{
    <link href="~/Content/FormDesign.css" rel="stylesheet" />
    <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
}

<div class="subheader py-2 py-lg-6 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">এলাকা</h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item text-muted">
                        <a href="#" class="text-muted">এলাকা হালনাগাদ করুন</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <a onclick="return goBack();" class="btn btn-light-primary font-weight-bolder btn-sm"><i class="fas fa-arrow-left"></i>আগের পেজে যান</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-custom gutter-b example example-compact">
                    <div class="card-header">
                        <h3 class="card-title"> এলাকা হালনাগাদ করুন</h3>
                        <div class="card-toolbar">
                            <div class="example-tools justify-content-center">
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("Edit", "DOHSArea", null, FormMethod.Post, new { @class = "form-signin", @id = "kt_form_2", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(h => h.AreaId)

                        <div class="card-body">
                            <fieldset>

                                <legend>এলাকার তথ্য</legend>

                                <div class="form-group row m-2">
                                    @Html.LabelFor(model => model.AreaName, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.EditorFor(model => model.AreaName, new { htmlAttributes = new { @class = "form-control", @name = "AreaName", placeholder = "Enter area name", @id = "AreaName" } })
                                        @Html.ValidationMessageFor(model => model.AreaName, "", new { @class = "text-danger" })
                                    </div>


                                    @Html.LabelFor(model => model.TotalArea, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-3">
                                        @Html.EditorFor(model => model.TotalArea, new { htmlAttributes = new { @class = "form-control", @name = "TotalArea", @id = "TotalArea", placeholder = "Enter total area" } })
                                        @Html.ValidationMessageFor(model => model.TotalArea, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-1">
                                        <input readonly class="form-control text-lg-left border-0" value="বর্গফুট" />
                                    </div>
                                </div>


                                <div class="form-group row m-2">
                                    @Html.LabelFor(model => model.CurrentFlatNumber, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.EditorFor(model => model.CurrentFlatNumber, new { htmlAttributes = new { @class = "form-control", @name = "CurrentFlatNumber", placeholder = "Enter current flat number", @id = "CurrentFlatNumber" } })
                                        @Html.ValidationMessageFor(model => model.CurrentFlatNumber, "", new { @class = "text-danger" })
                                    </div>


                                    @Html.LabelFor(model => model.CurrentPlotNumber, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.EditorFor(model => model.CurrentPlotNumber, new { htmlAttributes = new { @class = "form-control", @name = "CurrentPlotNumber", @id = "CurrentPlotNumber", placeholder = "Enter current plot number" } })
                                        @Html.ValidationMessageFor(model => model.CurrentPlotNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row m-2">
                                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "col-lg-2 col-form-label text-lg-right" })
                                    <div class="col-lg-4">
                                        @Html.DropDownListFor(model => model.IsActive, null, new
                                  {
                                      @class = "form-control"
                                  })
                                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </fieldset>
                        </div>
                        <div class="card-footer">
                            <div class="text-center">
                                <button type="submit" class="btn btn-outline-success btn-md"><i class="fas fa-check"></i>হালনাগাদ করুন</button>
                                <button type="button" onclick="window.location.href = '/DOHSArea/Index'" class="btn btn-outline-dark btn-md"><i class="fas fa-arrow-left"></i>মূল তালিকায় ফিরে যান </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>

        jQuery(document).ready(function () {

            $("#kt_form_2").validate({
                rules: {
                    AreaName: {
                        required: true
                    },
                    TotalArea: {
                        number: true
                    },
                    CurrentFlatNumber: {
                        digits: true
                    },
                    CurrentPlotNumber: {
                        digits: true
                    }
                },
                messages: {
                    AreaName: "ঘরটি অবশ্যই পূরণ করতে হবে",
                    TotalArea: {
                        number: "এলাকার মোট আয়তন ইংরেজিতে দিন"
                    },
                    CurrentFlatNumber: {
                        digits: "বর্তমান ফ্লাট ইংরেজিতে দশমিক ছাড়া পূর্ণ সংখ্যা দিন"
                    },
                    CurrentPlotNumber: {
                        digits: "বর্তমান ফ্লাট ইংরেজিতে দশমিক ছাড়া পূর্ণ সংখ্যা দিন"
                    }
                },
                invalidHandler: function (event, validator) {
                    KTUtil.scrollTop();
                }
            });
        });
    </script>
}
