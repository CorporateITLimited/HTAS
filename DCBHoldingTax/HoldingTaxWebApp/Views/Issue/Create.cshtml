				var errorItemCount = 0;



                    var MsgDetails =  $('#MsgDetails').val().trim();

					debugger;
						var detailsItem = {
							MsgDetails: MsgDetails
						}
						list.push(detailsItem);


				if (list.length == 0) {
					$('#bill_details_error').text('At least one Product required.');
			        isAllValid = false;
				}



				// Bill validation

				if (!($('#Subject').val().trim()) || ($('#Subject').val().trim() == '')) {
					$('#bill_details_error').text('Subject Name required.');
						isAllValid = false;
				}

				if (!isAllValid) {
					KTUtil.scrollTop();
				}
				else {
					var data = {

						Subject: $('#Subject').val().trim(),
						IssueDetails: list
					}

					$.ajax({
						type: 'POST',
						url: '@Url.Action("AddOrUpdate", "Issue")',
						data: JSON.stringify(data),
						contentType: 'application/json',
						success: function (d) {
					if (d.status === "success") {
								$('#Subject').val('');

						list = [];

						swal.fire({
							"icon": 'success',
									"title": 'Your work has been saved',
									"timer": 1500
								});
						setTimeout(function () { window.location.href = "/Issue/Index"; }, 2000);
					}
					else if (d.status === "error") {
						alert('Error');
					}
					else {
						alert('error_full');
					}
							$('#btnSend').val('Send');
				},
						error: function (error) {
					console.log(error);
							$('#btnSend').val('Send');
				}
					});


